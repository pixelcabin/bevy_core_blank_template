{% form 'create_customer' %}
{{ form.errors | default_errors }}<!-- Errors are handled within customers/register.liquid -->
<input type="text" value="" name="customer[first_name]" id="first-name" class="large" size="30" placeholder="{{ 'general.forms.first_name' | t }}" />

<input type="text" value="" name="customer[last_name]" id="last-name" class="large" size="30" placeholder="{{ 'general.forms.last_name' | t }}" />

<input type="email" value="" name="customer[email]" id="email" class="large" size="30" placeholder="{{ 'general.forms.email' | t }}" />

<input type="password" value="" name="customer[password]" id="password" class="large password" size="30" placeholder="{{ 'general.forms.password' | t }}" />

<input type="submit" value="{{ 'customer_pages.login_signup.create_account' | t }}" />
{% endform %}