<script>
  var redirectIfHashbang = function() {
    var domain = window.location.origin;
    var hashpath = window.location.hash;
    var pattern = new RegExp('^#!');
    if (hashpath.match(pattern)) {
      var newPath = hashpath.replace(pattern, '').replace(/\/(cerveza|beerpack)\//g, 'products');

      var mappings = [
        {old: 'test', shopify: 'corona-extra'}
      ];
      for(var i = 0; i < mappings.length; i++) {
        newPath = newPath.replace(mappings[i].old, mappings[i].shopify);
      }

      window.location.replace(domain + newPath);
    }
  }();
</script>